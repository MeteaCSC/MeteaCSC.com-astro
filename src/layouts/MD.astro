---
import type { MarkdownLayoutProps } from 'astro';
import Nav from '../components/nav.astro';
import Footer from '../components/footer.astro';
import Head from '../components/head.astro';

type Props = MarkdownLayoutProps<{
  title: string;
}>;

const { frontmatter, url } = Astro.props;
---

<html lang="en">
    <Head title ={frontmatter.title} />
  <body>
    <Nav title={frontmatter.title}/>
    <main class="center" transition:animate="fade">
    <h1>{frontmatter.title}</h1>
    <slot />
    <button type="button" style = "margin-top:40px; bottom: 10px; background-color: var(--shadow);" onclick="window.location='/Astro-Blog/'">&larr; Back</button>
    </main>
    <Footer/>
  </body>
</html>


<style>
  main{
    display: block;
  }
</style>